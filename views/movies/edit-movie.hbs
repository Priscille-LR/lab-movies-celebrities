<div class='create-movie'>
  <h2>Edit a movie</h2>

  <form action='/movies/{{movie._id}}/edit' method='post'>
    <label for='title'>Title</label>
    <input type='text' name='title' id='title-input' value="{{movie.title}}" />

    <label for='genre'>Genre</label>
    <input type='text' name='genre' id='genre-input' value="{{movie.genre}}"/>

    <label for='plot'>Plot</label>
    <input type='text' name='plot' id='plot-input' value="{{movie.plot}}"/>

    <label for='cast-select'>Cast</label>
    <select name='cast' id='cast-select' multiple>
      {{!-- <option disable selected value=''></option> --}}
      {{#each dbCelebrities}}
        <option value='{{_id}}'> {{name}} </option>
      {{/each}}
    </select>

    <button type='submit' class='create-btn'>Save changes</button>
  </form>
</div>