<div class='movie'>
  <div class='movie-content'>
    <a href='/movies'>Go back</a>
    <h2>{{movie.title}}</h2>
    <h3>{{movie.genre}}</h3>
    <h3>Plot</h3>
    <p>{{movie.plot}}</p>
    <h3>Stars</h3>
    <div class='movie-stars'>
      {{#each movie.cast}}
        <p>{{this.name}}</p>
        <p>{{this.occupation}}</p>
        <em>"{{this.catchPhrase}}"</em>
      {{/each}}
    </div>
    <form action='/movies/{{movie._id}}/delete' method='post'>
      <button class='delete-btn'>Delete</button>
    </form>
    <a href="/movies/{{movie._id}}/edit">Edit</a>  
  </div>
</div>