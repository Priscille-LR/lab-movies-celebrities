<div class='create-movie'>
  <h2>Create a new movie</h2>

  <form action='/movies/create' method='post'>
    <label for='title'>Title</label>
    <input type='text' name='title' id='title-input' />

    <label for='genre'>Genre</label>
    <input type='text' name='genre' id='genre-input' />

    <label for='plot'>Plot</label>
    <input type='text' name='plot' id='plot-input' />

    <label for='cast-select'>Cast</label>
    <select name='cast' id='cast-select' multiple>
      <option disable selected value=''></option>
      {{#each dbCelebrities}}
        <option value='{{_id}}'> {{name}} </option>
      {{/each}}
    </select>

    <button type='submit' class='create-btn'>Create movie</button>
  </form>
</div>